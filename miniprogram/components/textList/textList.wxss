/* components/textList/textList.wxss */
@import "../../style/iconfont/iconfont.wxss";

.scroll {
  margin: 0 auto;
  width: max-content;
  position: fixed;
  left: 0;
  right: 0;
  top: 240rpx;
  z-index: 200;
}

.scroll-item {
  margin-bottom: 20px;
  width: 80vw;
  height: 90px;
  background-color: red;
  border-radius: 10rpx;
  background-color: #ffffff;
  border: 1rpx solid #d5d5d5;
  padding: 8px 18px;
  display: grid;
  grid-template-columns: 86% 14%;
  grid-template-rows: 30px 70px;
  grid-gap: 10px;
}

.user-info {
  grid-column: 1 / 2;
  font-size: 18px;
  line-height: 12px;
}

.icon-a-shenglvehao3x {
  font-size: 40px;
  grid-column: 2 / 3;
  text-align: center;
}

.secret {
  grid-column: 1 / 2;
  font-size: 30px;
  letter-spacing: 14px;
  font-weight: 600;
  line-height: 50px;
  color: var(--secretColor)
}

.big-circle {
  grid-column: 2 / 3;
  border-radius: 50%;
  width: 35px;
  height: 35px;
  background: conic-gradient(var(--secretColor) 0%, var(--secretColor) calc(var(--progress) * 1%), transparent 0%);
  margin: 0 auto;
  margin-top: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.small-circle {
  border-radius: 50%;
  text-align: center;
  color: #b8b8ba;
  font-size: 12px;
  line-height: 30px;
  width: 30px;
  height: 30px;
  background-color: #ffffff;
}